{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Task",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier for the task."
    },
    "data": {
      "type": "string",
      "description": "Payload or description of the task."
    },
    "frequency": {
      "type": "integer",
      "description": "How often the task should run, in seconds."
    }
  },
  "required": ["id", "data", "frequency"]
}
